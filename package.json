{
  "name": "astro-starter-kit",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npx simple-git-hooks && npm run generate-schema",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-schema": "dotenv -c -- bash -c 'gql.tada generate schema https://graphql.datocms.com --header \"X-Exclude-Invalid: true\" --header \"Authorization: $DATOCMS_PUBLISHED_CONTENT_CDA_TOKEN\"'",
    "lint": "prettier --check .",
    "format": "npx prettier . --write",
    "test": "echo 'Tests will be added in Phase 5' && exit 0"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/netlify": "^6.6.3",
    "@datocms/astro": "^0.6.4",
    "@datocms/cda-client": "^0.2.7",
    "@datocms/cma-client": "^5.1.30",
    "astro": "^5.8.2",
    "gql.tada": "^1.9.0",
    "jsdom": "^27.2.0",
    "jsonwebtoken": "^9.0.2",
    "serialize-error": "^12.0.0",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/ts-plugin": "^1.10.6",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.7.3",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^3.4.18"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}
